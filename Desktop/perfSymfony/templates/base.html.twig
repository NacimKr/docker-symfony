                  <li class="nav-item">
                    <a class="nav-link" href="{{ path("app_pokemon") }}">Pokemons</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link {{ app.current_route == "app_template" or app.current_route starts with "app_template" ? 'active' : ""  }}" href="{{ path("app_template") }}">Template</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link {{ app.current_route == "app_template" or app.current_route starts with "app_template" ? 'active' : ""  }}" href="{{ path("app_template_type") }}">Type</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link {{ app.current_route == "app_doctrine" or app.current_route starts with "app_doctrine" ? 'active' : ""  }}" href="{{ path("app_doctrine") }}">Doctrine</a>
                  </li>
    
                </ul>
              </div>
            </div>
          </nav>
